<section class="cv-section" id="teaching">
  <h3>Teaching</h3>
  {% assign items = site.data.resume.teaching | default: site.data.cv.teaching | default: empty %}
  {% for t in items %}
    <div class="item">
      <div class="row">
        <div class="col-sm-9">
          {% if t.role %}<strong>{{ t.role }}</strong>{% endif %}
          {% if t.course %}{% if t.role %} — {% endif %}{{ t.course }}{% endif %}
          {% if t.institution %}, {{ t.institution }}{% endif %}
        </div>
        <div class="col-sm-3 text-sm-right">
          {{ t.startDate }}{% if t.endDate %} – {{ t.endDate }}{% endif %}
        </div>
      </div>
      {% if t.summary %}<p>{{ t.summary }}</p>{% endif %}
    </div>
  {% endfor %}
</section>
