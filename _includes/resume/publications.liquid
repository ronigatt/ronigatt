<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign publications = data[1] | sort: 'releaseDate' | reverse %}
  {% for content in publications %}
    <li class="list-group-item">
      <div class="row">
        <!-- LEFT: date -->
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.releaseDate %}
            {% assign year = content.releaseDate | slice: 0, 4 %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  {% if year %}
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                      {{ year }}
                    </span>
                  {% endif %}
                </td>
              </tr>
              {% if content.location %}
              <tr>
                <td>
                  <p class="location">
                    <i class="fa-solid fa-location-dot iconlocation"></i>
                    {{ content.location }}
                  </p>
                </td>
              </tr>
              {% endif %}
            </tbody>
          </table>
        </div>

        <!-- RIGHT: content -->
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {% if content.url %}
              <a href="{{ content.url }}">{{ content.name }}</a>
            {% else %}
              {{ content.name }}
            {% endif %}
          </h6>
          {% if content.publisher %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.publisher }}</h6>
          {% endif %}
          {% if content.summary %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">
              {{ content.summary }}
            </h6>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
