{% assign items = site.data.resume.awards | default: empty %}
{% for a in items %}
  <div class="item">
    <div class="row">
      <div class="col-sm-9">
        {% if a.url %}
          <a href="{{ a.url }}">{{ a.title }}</a>
        {% else %}
          <strong>{{ a.title }}</strong>
        {% endif %}
        {% if a.awarder %} â€” {{ a.awarder }}{% endif %}
      </div>
      <div class="col-sm-3 text-sm-right">
        {{ a.date }}
      </div>
    </div>
    {% if a.summary %}<p>{{ a.summary }}</p>{% endif %}
  </div>
{% endfor %}
