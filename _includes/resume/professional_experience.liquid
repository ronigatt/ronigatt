{%- assign items = site.data.resume.professional_experience | sort: "startDate" | reverse -%}
{%- if items and items != empty -%}
  {%- for item in items -%}
    {%- assign start_raw = item.startDate -%}
    {%- assign end_raw = item.endDate -%}

    {%- capture start_year -%}
      {%- if start_raw contains '-' -%}
        {{ start_raw | date: "%Y" }}
      {%- else -%}
        {{ start_raw }}
      {%- endif -%}
    {%- endcapture -%}

    {%- capture end_year -%}
      {%- if end_raw -%}
        {%- if end_raw contains '-' -%}
          {{ end_raw | date: "%Y" }}
        {%- else -%}
          {{ end_raw }}
        {%- endif -%}
      {%- else -%}
        Present
      {%- endif -%}
    {%- endcapture -%}

    <div class="row cv-item">
      <!-- Left: date -->
      <div class="col-sm-3 text-muted cv-date">
        {{ start_year | strip }}â€“{{ end_year | strip }}
      </div>

      <!-- Right: content -->
      <div class="col-sm-9">
        <div class="font-weight-bold">
          {{ item.position }}
        </div>
        <div class="text-muted">
          {{ item.name }}
          {%- if item.location %}, {{ item.location }}{% endif %}
        </div>
        {%- if item.summary %}
          <div class="small mt-1">{{ item.summary }}</div>
        {%- endif %}
      </div>
    </div>
  {%- endfor -%}
{%- endif -%}
