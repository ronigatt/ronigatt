<section class="cv-section" id="awards">
  {% assign items = site.data.resume.awards | default: site.data.cv.awards | default: empty %}
  {% for a in items %}
    <div class="item">
      <div class="row">
        <div class="col-sm-9">
          {% if a.url %}
            <!-- Real link: gets both color + underline -->
            <a href="{{ a.url }}" class="award-link">{{ a.title }}</a>
          {% else %}
            <!-- Fake link: styled like link but no underline -->
            <span class="award-fake-link">{{ a.title }}</span>
          {% endif %}
          {% if a.awarder %} â€” {{ a.awarder }}{% endif %}
        </div>
        <div class="col-sm-3 text-sm-right">
          {{ a.date }}
        </div>
      </div>
      {% if a.summary %}<p>{{ a.summary }}</p>{% endif %}
    </div>
  {% endfor %}
</section>
